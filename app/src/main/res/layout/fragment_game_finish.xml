<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.constraint.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="300dp"
        android:layout_height="450dp"
        android:background="@color/customrPrimaryBlue">

        <TextView
            android:id="@+id/finish_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#65caaa"
            android:textStyle="bold"
            android:text="has finish"
            android:paddingTop="70dp"
            android:paddingHorizontal="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <ImageView
            android:id="@+id/finish_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:paddingTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/finish_textview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/go_home_button"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Go Home"
            android:layout_margin="30dp"
            style="@style/GeneralButton"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>